{
	"compileOnSave": false,

	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",

		"target": "es2015",
		"module": "esnext",
		"moduleResolution": "node",
		"sourceMap": false,
		"declaration": false,
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"importHelpers": true,

		"lib": [
			"dom",
			"es2018"
		],

		"typeRoots": [
			"node_modules/@types",
			"node_modules/web-ext-types"
		]
	},

	"angularCompilerOptions": {
		"fullTemplateTypeCheck": true,
		"strictInjectionParameters": true
	}
}
